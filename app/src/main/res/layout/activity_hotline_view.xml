<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F1F0F0"
    tools:context=".hotline.HotlineView">
    <com.google.android.material.appbar.AppBarLayout
        app:elevation="20dp"
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="200dp"
        android:background="@drawable/bg"
        tools:ignore="MissingConstraints">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            />
        <TextView
            android:layout_marginTop="?actionBarSize"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#ffffffff"
            android:layout_margin="22dp"
            android:gravity="bottom"
            android:text="Yogyakarta Tanggap COVID-19"
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_margin="22dp"
            android:textSize="12sp"
            android:textColor="#ffffffff"
            android:text="Jangan panik! Mari bersama lawan COVID-19. Hubungi layanan Yogyakarta Tanggap COVID-19."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10sp"
        app:cardElevation="10dp"
        app:contentPadding="20dp"
        app:cardBackgroundColor="#ffffffff"
        app:cardUseCompatPadding="true"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:id="@+id/no1"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/cons"
                android:src="@drawable/ic_contact"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:textSize="21sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/cons"
                android:text="0274555585" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="50dp"
            android:id="@+id/no2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/conse"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_contact" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/conse"
                android:gravity="center"
                android:text="08112764800"
                android:textSize="21sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="100dp"
            android:id="@+id/no3"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/consee"
                android:src="@drawable/ic_checked"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:textSize="21sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/consee"
                android:text="lapor.jogjaprov.go.id" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
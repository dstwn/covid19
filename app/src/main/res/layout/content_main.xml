<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="110dp"
    android:paddingStart="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Kenali COVID-19 Lebih Dekat"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:translationZ="1dp"
                app:contentPadding="30dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#ffffffff"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardOne"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:padding="2dp">
                <ImageView
                    android:src="@drawable/card_mengenal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:translationZ="1dp"
                app:contentPadding="30dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#ffffffff"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardTwo"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/cardOne"
                android:padding="2dp">
                <ImageView
                    android:src="@drawable/card_mencegah"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:translationZ="1dp"
                app:contentPadding="30dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#ffffffff"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardThree"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@+id/cardTwo"
                android:padding="2dp">
                <ImageView
                    android:src="@drawable/card_mengobati"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:translationZ="1dp"
                app:contentPadding="30dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#ffffffff"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardFour"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_toEndOf="@+id/cardThree"
                android:padding="2dp">
                <ImageView
                    android:src="@drawable/card_mengantisipasi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </HorizontalScrollView>
    <androidx.cardview.widget.CardView
        app:cardElevation="1dp"
        android:id="@+id/vid"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="#FFFFFFFF"
        app:cardCornerRadius="10dp"
        android:layout_marginEnd="6dp"
        app:contentPadding="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@+id/tit">
        <RelativeLayout
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/vidYoutube"
                android:src="@drawable/ic_video"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:textColor="#ff000000"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/vidYoutube"
                android:text="Tonton Videonya"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Protokol Pengecekan di Universitas Negeri Yogyakarta"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="18dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
